<% if (success && success.length) {%>
<div style="width: 50%;" class="alert alert-success alert-dismissible fade show mx-auto" role="alert">
    <%= success %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
<% } %>

<% if (error && error.length) {%>
<div style="width: 50%" class="alert alert-danger alert-dismissible fade show mx-auto" role="alert">
    <%= error %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
<% } %>